<h1><%= @user.name %></h1>


<table>
	<tr>
		<th>Created events</th>
		<th>Upcoming events</th>
		<th>Past events</th>
	</tr>
	<td>
		<table>
			<tr>
				<th>Event</th>
				<th>Date</th>
			</tr>
			<% @user.created_events.each do |event| %>
				<tr>
					<td><%= link_to event.name, event %></td>
					<td><%= event.date %></td>
				</tr>
			<% end %>
		</table>
	</td>
	<td>
		<table>
			<tr>
				<th>Event</th>
				<th>Date</th>
			</tr>
			<% if @upcoming_events != nil %>
			<% @upcoming_events.each do |event| %>
				<tr>
					<td><%= link_to event.name, event %></td>
					<td><%= event.date %></td>
				</tr>
			<% end %>
			<% end %>
		</table>
	</td>
	<td>
		<table>
			<tr>
				<th>Event</th>
				<th>Date</th>
			</tr>
			<% if @previous_events != nil %>
				<% @previous_events.each do |event| %>
				<tr>
					<td><%= link_to event.name, event %></td>
					<td><%= event.date %></td>
				</tr>
			<% end %>
			<% end %>
</table>


